{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**", "test-results/**"],
      "inputs": ["src/**", "tests/**", "*.config.*"],
      "cache": true
    },
    "lint": {
      "outputs": [],
      "inputs": ["src/**", "tests/**", "*.config.*"],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "types": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": ["src/**", "tests/**", "*.config.*"],
      "cache": true
    }
  }
}
