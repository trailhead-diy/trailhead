{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "inputs": [
        "src/**",
        "package.json",
        "tsconfig.json",
        "tsconfig.*.json",
        "vite.config.*",
        "vitest.config.*"
      ],
      "outputLogs": "errors-only",
      "cache": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**", "test-results/**"],
      "inputs": [
        "src/**",
        "tests/**",
        "vitest.config.*",
        "vitest.setup.*",
        "tsconfig.json"
      ],
      "cache": true,
      "env": ["NODE_ENV"],
      "outputLogs": "errors-only"
    },
    "lint": {
      "outputs": [],
      "inputs": [
        "src/**",
        "tests/**",
        "oxlintrc.*",
        ".oxlintrc.*",
        "package.json"
      ],
      "outputLogs": "errors-only",
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "types": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": [
        "src/**",
        "tests/**",
        "tsconfig.json",
        "tsconfig.*.json",
        "package.json"
      ],
      "outputLogs": "errors-only",
      "cache": true
    },
    "format": {
      "outputs": [],
      "inputs": [
        "**/*.{ts,tsx,js,jsx,json,md}",
        ".prettierrc.*",
        "prettier.config.*"
      ],
      "outputLogs": "errors-only",
      "cache": false
    },
    "format:check": {
      "outputs": [],
      "inputs": [
        "**/*.{ts,tsx,js,jsx,json,md}",
        ".prettierrc.*",
        "prettier.config.*"
      ],
      "outputLogs": "errors-only",
      "cache": true
    },
    "lint:fix": {
      "outputs": [],
      "inputs": [
        "src/**",
        "tests/**",
        "oxlintrc.*",
        ".oxlintrc.*",
        "package.json"
      ],
      "outputLogs": "errors-only",
      "cache": false
    }
  }
}
