{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "types": ["node"],
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@esteban-url/core": ["../../packages/core/src"],
      "@esteban-url/core/*": ["../../packages/core/src/*"],
      "@esteban-url/cli": ["../../packages/cli/src"],
      "@esteban-url/cli/*": ["../../packages/cli/src/*"],
      "@esteban-url/config": ["../../packages/config/src"],
      "@esteban-url/config/*": ["../../packages/config/src/*"],
      "@esteban-url/data": ["../../packages/data/src"],
      "@esteban-url/data/*": ["../../packages/data/src/*"],
      "@esteban-url/fs": ["../../packages/fs/src"],
      "@esteban-url/fs/*": ["../../packages/fs/src/*"],
      "@esteban-url/validation": ["../../packages/validation/src"],
      "@esteban-url/validation/*": ["../../packages/validation/src/*"],
      "@esteban-url/create-cli": ["../../packages/create-cli/src"],
      "@esteban-url/create-cli/*": ["../../packages/create-cli/src/*"]
    }
  },
  "include": ["src/**/*", "**/*.ts"],
  "exclude": ["**/*.tsx", "**/*.jsx", "node_modules", "dist", "build", ".turbo"]
}
