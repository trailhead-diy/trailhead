{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["react", "react-dom"],
    "moduleResolution": "bundler"
  },
  "include": ["src/**/*", "**/*.tsx", "**/*.ts"],
  "exclude": ["node_modules", "dist", "build", ".turbo"]
}
