{
  "name": "@repo/scripts-cli",
  "version": "0.1.0",
  "description": "TypeScript CLI tools for Trailhead monorepo operations",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "scripts-cli": "./bin/scripts-cli.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --watch --config tsup.config.ts",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:comparison": "vitest run tests/comparison",
    "test:parity": "./scripts/verify-parity.sh",
    "test:all": "pnpm test && pnpm test:parity",
    "types": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@esteban-url/cli": "workspace:*",
    "@esteban-url/core": "workspace:*",
    "@esteban-url/fs": "workspace:*",
    "chalk": "^5.3.0",
    "fast-glob": "^3.3.2"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "@repo/tsup-config": "workspace:*",
    "@types/node": "^22.2.0",
    "tsup": "^8.3.0",
    "typescript": "^5.7.2",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=20"
  }
}
