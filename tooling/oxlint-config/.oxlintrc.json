{
  "$schema": "https://oxc-project.github.io/oxlint/schema.json",
  "plugins": ["react", "typescript", "unicorn"],
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "categories": {
    "correctness": "error",
    "suspicious": "warn"
  },
  "rules": {
    "no-unused-vars": "error",
    "no-console": "warn",
    "prefer-const": "error",
    "eqeqeq": ["error", "always"],
    "no-debugger": "error",
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "react/no-unused-prop-types": "error",
    "react/prefer-stateless-function": "warn",
    "react/jsx-pascal-case": "error",
    "react/jsx-no-bind": "warn",
    "react/no-direct-mutation-state": "error",
    "react/jsx-no-duplicate-props": "error",
    "react/jsx-key": "error",
    "react/no-deprecated": "warn",
    "react/no-string-refs": "error"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "linkComponents": [
        {
          "name": "Link",
          "linkAttribute": "to"
        }
      ]
    }
  },
  "ignorePatterns": [
    "dist/**/*",
    "node_modules/**/*",
    "coverage/**/*",
    "*.config.js",
    "*.config.ts",
    "*.config.mjs",
    ".turbo/**/*",
    "build/**/*"
  ]
}
