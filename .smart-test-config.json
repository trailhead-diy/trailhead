{
  "highRiskPatterns": [
    "src/.*\\.(ts|tsx|js|jsx)$",
    "tsconfig",
    "package\\.json$",
    "turbo\\.json$",
    "vitest\\.config",
    "vite\\.config",
    "tsup\\.config",
    "lefthook\\.yml$"
  ],
  "skipPatterns": [
    "\\.md$",
    "README",
    "CHANGELOG",
    "LICENSE",
    "\\.github/",
    "\\.vscode/",
    "\\.gitignore$",
    "\\.prettierrc",
    "\\.prettierignore",
    "docs/",
    "\\.smart-test-config\\.json$",
    "\\.mcp\\.json$",
    ".*\\.test\\.(ts|tsx|js|jsx)$",
    ".*/__tests__/.*$",
    "tests/.*$",
    "pnpm-lock\\.yaml$",
    "package-lock\\.json$",
    "yarn\\.lock$"
  ],
  "packageMappings": {
    "cli": "@esteban-url/cli",
    "create-cli": "@esteban-url/create-cli"
  },
  "testCommand": "pnpm test",
  "monorepoMode": true,
  "timeout": 120,
  "maxRetries": 2,
  "retryFlaky": true,
  "parallelTesting": true,
  "description": "Smart test configuration for Trailhead monorepo",
  "version": "1.0.0"
}
