#!/usr/bin/env node

import { createCLI } from '@trailhead/cli'
import { consola } from 'consola'
import { versionCommand } from './commands/version.js'
import { helpCommand } from './commands/help.js'
{{#if features.config}}
import { configCommand } from './commands/config.js'
{{/if}}

/**
 * {{projectName}} CLI
 * 
 * {{description}}
 * Built with @trailhead/cli
 */
async function main() {
  const cli = createCLI({
    name: '{{packageName}}',
    version: '{{version}}',
    description: '{{description}}',
    commands: [
      versionCommand,
      helpCommand,
{{#if features.config}}
      configCommand,
{{/if}}
    ]
  })

  await cli.run()
}

// Run the CLI
main().catch((error) => {
  consola.error('Fatal error:', error)
  process.exit(1)
})