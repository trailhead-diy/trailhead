{
  "name": "@trailhead/create-cli",
  "version": "1.0.1",
  "type": "module",
  "private": false,
  "description": "CLI generator for creating projects with @trailhead/cli",
  "author": "Esteban Rojas (Trailhead DIY)",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "create-cli": "./bin/cli.js",
    "@trailhead/create-cli": "./bin/cli.js"
  },
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "pnpm clean && tsup",
    "build:prod": "NODE_ENV=production tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:integration": "pnpm --filter='@repo/*' build && pnpm build && pnpm test",
    "test:generator:full": "tsx scripts/test-generator-full.ts",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "types": "tsc --noEmit",
    "format": "prettier --write . --log-level=error --ignore-path ../../.prettierignore",
    "format:check": "prettier --check . --log-level=error --ignore-path ../../.prettierignore",
    "format:templates": "echo 'Note: Templates are formatted during generation via transform-helpers.ts'",
    "clean": "rm -rf dist",
    "pretest": "pnpm --filter='@trailhead/*' build && pnpm build",
    "validate": "pnpm types && pnpm lint && pnpm test",
    "prepublishOnly": "echo \"Publishing without rebuild\""
  },
  "dependencies": {
    "@trailhead/cli": "workspace:*",
    "@trailhead/core": "workspace:*",
    "consola": "^3.4.2",
    "es-toolkit": "^1.31.0",
    "execa": "^9.6.0",
    "fast-glob": "^3.3.3",
    "handlebars": "^4.7.8",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@repo/tsup-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "@types/node": "^24.10.0",
    "@vitest/coverage-v8": "^4.0.16",
    "oxlint": "^1.35.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "bin",
    "templates",
    "README.md"
  ],
  "keywords": [
    "cli",
    "generator",
    "scaffold",
    "create",
    "trailhead-cli",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trailhead-diy/trailhead.git",
    "directory": "packages/create-cli"
  },
  "bugs": {
    "url": "https://github.com/trailhead-diy/trailhead/issues"
  },
  "homepage": "https://github.com/trailhead-diy/trailhead#readme",
  "license": "MIT"
}
