#!/usr/bin/env node

import { createCLI } from '@esteban-url/trailhead-cli'
import { buildCommand } from './commands/build.js'
import { devCommand } from './commands/dev.js'

/**
 * {{projectName}} CLI
 * 
 * {{description}}
