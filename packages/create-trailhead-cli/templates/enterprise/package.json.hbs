{
  "name": "{{packageName}}",
  "version": "{{version}}",
  "type": "module",
  "private": false,
  "description": "{{description}} - Enterprise Edition",
  "bin": {
    "{{packageName}}": "./bin/cli.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "pnpm clean && tsc --emitDeclarationOnly && tsup",
    "build:prod": "NODE_ENV=production tsup && tsc --emitDeclarationOnly",
    "dev": "tsup --watch",
    "test": "pnpm build && vitest run",
    "test:coverage": "pnpm build && vitest run --coverage",
    "test:watch": "vitest",
    "test:security": "pnpm build && node dist/index.js security --scan all",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "types": "tsc --noEmit",
    "clean": "rm -rf dist",
    "pretest": "pnpm build",
    "prepack": "pnpm build",
    "validate": "pnpm types && pnpm lint && pnpm test && pnpm test:security",
    "monitor": "node dist/index.js monitor --mode dashboard",
    "security:scan": "node dist/index.js security --scan all --report json",
    "audit:deps": "pnpm audit --audit-level moderate",
    "audit:licenses": "pnpm licenses list"
  },
  "dependencies": {
    "@esteban-url/trailhead-cli": "^0.1.0",
    "@inquirer/prompts": "^7.0.0",
    "chalk": "^5.3.0",
    "commander": "^14.0.0",
    "fs-extra": "^11.3.0",
    "ora": "^8.0.1",
    "zod": "^3.22.4",
    "glob": "^10.3.0",
    "winston": "^3.11.0",
    "prom-client": "^15.1.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "rate-limiter-flexible": "^4.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "@repo/oxlint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.0",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcrypt": "^5.0.2",
    "@vitest/coverage-v8": "^1.2.0",
    "oxlint": "^0.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "bin",
    "monitoring",
    "security",
    "README.md"
  ],
  "keywords": [
    "cli",
    "command-line",
    "typescript",
    "trailhead-cli",
    "enterprise",
    "security",
    "monitoring",
    "observability"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/{{author}}/{{packageName}}.git"
  },
  "author": "{{author}} <{{email}}>",
  "license": "{{license}}",
  "security": {
    "advisories": true,
    "auditLevel": "moderate",
    "allowedLicenses": [
      "MIT",
      "Apache-2.0",
      "BSD-2-Clause",
      "BSD-3-Clause",
      "ISC"
    ]
  },
  "monitoring": {
    "enabled": true,
    "exporters": ["prometheus"],
    "alerting": {
      "channels": ["console", "webhook"]
    }
  }
}