{{#if IS_MONOREPO}}
{
  "name": "{{packageName}}",
  "version": "{{version}}",
  "private": true,
  "description": "{{description}}",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/{{author}}/{{packageName}}.git"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "types": "turbo types",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    {{#if DOCS_VALIDATION}}
    "docs:validate": "tsx tooling/docs-tooling/src/validate-docs.ts",
    "docs:lint": "vale docs && markdownlint docs/**/*.md",
    "docs:coverage": "tsx tooling/docs-tooling/src/validate-docs.ts --coverage",
    "docs:new": "tsx tooling/docs-tooling/src/create-doc.ts",
    {{/if}}
    {{#if CHANGESET_REMINDER}}
    "changeset": "changeset",
    "changeset:add": "changeset add",
    "changeset:status": "changeset status --verbose",
    "version-packages": "changeset version",
    "release": "turbo build --filter=./packages/* && changeset publish",
    "release:dry-run": "changeset publish --dry-run",
    {{/if}}
    "prepare": "lefthook install",
    "lefthook": "lefthook",
    "lefthook:install": "lefthook install",
    "lefthook:uninstall": "lefthook uninstall"
  },
  "devDependencies": {
    {{#if CHANGESET_REMINDER}}
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.27.1",
    {{/if}}
    {{#if DOCS_VALIDATION}}
    "@inquirer/prompts": "^7.1.0",
    "gray-matter": "^4.0.3",
    {{/if}}
    "@types/node": "^24.0.10",
    "chalk": "^5.3.0",
    "lefthook": "^1.8.4",
    "oxlint": "^1.1.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "tsx": "^4.20.3",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "{{PACKAGE_MANAGER}}@{{PACKAGE_MANAGER_VERSION}}",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "glob@<10": ">=11.0.0",
      "inflight": "npm:@void/noop@^1.0.0"
    }
  }
}
{{/if}}