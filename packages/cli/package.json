{
  "name": "@trailhead/cli",
  "version": "1.0.0",
  "type": "module",
  "private": false,
  "description": "Focused CLI framework orchestrator for building production-ready command-line applications with TypeScript and Result types",
  "author": "Esteban Rojas (Trailhead DIY)",
  "publishConfig": {
    "access": "public"
  },
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./command": {
      "types": "./dist/command/index.d.ts",
      "default": "./dist/command/index.js"
    },
    "./prompts": {
      "types": "./dist/prompts/index.d.ts",
      "default": "./dist/prompts/index.js"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "default": "./dist/testing/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    },
    "./progress": {
      "types": "./dist/progress/index.d.ts",
      "default": "./dist/progress/index.js"
    }
  },
  "scripts": {
    "build": "pnpm clean && tsup",
    "build:prod": "NODE_ENV=production tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:all": "pnpm test",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "lint:neverthrow": "eslint --config eslint.config.js 'src/**/*.{ts,tsx}'",
    "types": "tsc --noEmit",
    "format": "prettier --write . --log-level=error --ignore-path ../../.prettierignore",
    "format:check": "prettier --check . --log-level=error --ignore-path ../../.prettierignore",
    "clean": "rm -rf dist",
    "validate": "pnpm types && pnpm lint && pnpm test:all",
    "prepublishOnly": "echo \"Publishing without rebuild\""
  },
  "dependencies": {
    "@inquirer/prompts": "^7.9.0",
    "@trailhead/core": "workspace:*",
    "@trailhead/fs": "workspace:*",
    "@trailhead/sort": "workspace:*",
    "@types/cli-progress": "^3.11.6",
    "cli-progress": "^3.12.0",
    "commander": "^14.0.2",
    "consola": "^3.4.2",
    "listr2": "^9.0.5",
    "yocto-spinner": "^1.0.0"
  },
  "devDependencies": {
    "@repo/tsup-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "@types/node": "^24.10.0",
    "@vitest/coverage-v8": "^4.0.7",
    "oxlint": "^1.25.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.7"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "cli",
    "framework",
    "command-line",
    "typescript",
    "internal"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trailhead-diy/trailhead.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/trailhead-diy/trailhead/issues"
  },
  "homepage": "https://github.com/trailhead-diy/trailhead#readme",
  "license": "MIT"
}
