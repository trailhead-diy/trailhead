{
  "name": "@esteban-url/trailhead-cli",
  "version": "0.1.0",
  "type": "module",
  "private": false,
  "description": "Comprehensive functional CLI framework for building production-ready command-line applications with TypeScript and neverthrow Result types",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "@esteban-url:registry": "https://npm.pkg.github.com"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "default": "./dist/core/index.js"
    },
    "./command": {
      "types": "./dist/command/index.d.ts",
      "default": "./dist/command/index.js"
    },
    "./filesystem": {
      "types": "./dist/filesystem/index.d.ts",
      "default": "./dist/filesystem/index.js"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "default": "./dist/config/index.js"
    },
    "./prompts": {
      "types": "./dist/prompts/index.d.ts",
      "default": "./dist/prompts/index.js"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "default": "./dist/testing/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    },
    "./git": {
      "types": "./dist/git/index.d.ts",
      "default": "./dist/git/index.js"
    },
    "./workflows": {
      "types": "./dist/workflows/index.d.ts",
      "default": "./dist/workflows/index.js"
    },
    "./error-recovery": {
      "types": "./dist/error-recovery/index.d.ts",
      "default": "./dist/error-recovery/index.js"
    },
    "./progress": {
      "types": "./dist/progress/index.d.ts",
      "default": "./dist/progress/index.js"
    },
    "./formats": {
      "types": "./dist/formats/index.d.ts",
      "default": "./dist/formats/index.js"
    },
    "./streams": {
      "types": "./dist/streams/index.d.ts",
      "default": "./dist/streams/index.js"
    },
    "./watcher": {
      "types": "./dist/watcher/index.d.ts",
      "default": "./dist/watcher/index.js"
    },
    "./data": {
      "types": "./dist/data/index.d.ts",
      "default": "./dist/data/index.js"
    },
    "./validation": {
      "types": "./dist/validation/index.d.ts",
      "default": "./dist/validation/index.js"
    }
  },
  "scripts": {
    "build": "pnpm clean && tsc --emitDeclarationOnly && tsup",
    "build:prod": "NODE_ENV=production tsup && tsc --emitDeclarationOnly",
    "dev": "tsup --watch",
    "pretest": "pnpm build",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:examples": "./examples/test-examples.sh",
    "test:examples:fast": "./examples/test-examples.sh --fast",
    "test:all": "pnpm test && pnpm test:examples",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "lint:neverthrow": "eslint --config eslint.config.js 'src/**/*.{ts,tsx}'",
    "types": "tsc --noEmit",
    "format": "prettier --write . --ignore-path .prettierignore",
    "format:check": "prettier --check . --ignore-path .prettierignore",
    "clean": "rm -rf dist",
    "prepack": "pnpm build",
    "validate": "pnpm types && pnpm lint && pnpm test:all"
  },
  "dependencies": {
    "@trailhead/core": "workspace:*",
    "@trailhead/fs": "workspace:*",
    "@trailhead/validation": "workspace:*",
    "@trailhead/data": "workspace:*",
    "@trailhead/formats": "workspace:*",
    "@trailhead/streams": "workspace:*",
    "@trailhead/watcher": "workspace:*",
    "@trailhead/workflows": "workspace:*",
    "@trailhead/config": "workspace:*",
    "@trailhead/git": "workspace:*",
    "@trailhead/testing": "workspace:*",
    "@trailhead/db": "workspace:*",
    "@inquirer/prompts": "^7.6.0",
    "@types/cli-progress": "^3.11.6",
    "chalk": "^5.4.1",
    "chokidar": "^4.0.3",
    "cli-progress": "^3.12.0",
    "commander": "^14.0.0",
    "cosmiconfig": "^9.0.0",
    "csv-sniffer": "^0.1.1",
    "exceljs": "^4.4.0",
    "fast-deep-equal": "^3.1.3",
    "file-type": "^21.0.0",
    "flat": "^6.0.1",
    "glob": "^11.0.3",
    "is-json": "^2.0.1",
    "json5": "^2.2.3",
    "listr2": "^9.0.0",
    "lodash": "^4.17.21",
    "neverthrow": "^8.2.0",
    "p-retry": "^6.2.1",
    "papaparse": "^5.5.3",
    "yocto-spinner": "^1.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@ninoseki/eslint-plugin-neverthrow": "^0.0.1",
    "@repo/oxlint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "@types/chokidar": "^2.1.7",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.0.10",
    "@types/papaparse": "^5.3.16",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.30.1",
    "oxlint": "^1.6.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "cli",
    "framework",
    "command-line",
    "typescript",
    "internal"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/esteban-url/trailhead.git",
    "directory": "packages/cli"
  },
  "license": "MIT"
}
