{
  "name": "@esteban-url/cli",
  "version": "0.1.0",
  "type": "module",
  "private": false,
  "description": "Focused CLI framework orchestrator for building production-ready command-line applications with TypeScript and Result types",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "@esteban-url:registry": "https://npm.pkg.github.com"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./command": {
      "types": "./dist/command/index.d.ts",
      "default": "./dist/command/index.js"
    },
    "./prompts": {
      "types": "./dist/prompts/index.d.ts",
      "default": "./dist/prompts/index.js"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "default": "./dist/testing/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    },
    "./progress": {
      "types": "./dist/progress/index.d.ts",
      "default": "./dist/progress/index.js"
    }
  },
  "scripts": {
    "build": "pnpm clean && tsc --emitDeclarationOnly && tsup",
    "build:prod": "NODE_ENV=production tsup && tsc --emitDeclarationOnly",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:examples": "./examples/test-examples.sh",
    "test:examples:fast": "./examples/test-examples.sh --fast",
    "test:all": "pnpm test && pnpm test:examples",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "lint:neverthrow": "eslint --config eslint.config.js 'src/**/*.{ts,tsx}'",
    "types": "tsc --noEmit",
    "format": "prettier --write . --ignore-path .prettierignore",
    "format:check": "prettier --check . --ignore-path .prettierignore",
    "clean": "rm -rf dist",
    "prepack": "pnpm build",
    "validate": "pnpm types && pnpm lint && pnpm test:all"
  },
  "dependencies": {
    "@esteban-url/core": "workspace:*",
    "@esteban-url/fs": "workspace:*",
    "@inquirer/prompts": "^7.6.0",
    "@types/cli-progress": "^3.11.6",
    "chalk": "^5.4.1",
    "cli-progress": "^3.12.0",
    "commander": "^14.0.0",
    "listr2": "^9.0.0",
    "yocto-spinner": "^1.0.0"
  },
  "devDependencies": {
    "@repo/oxlint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "@types/node": "^24.0.10",
    "@vitest/coverage-v8": "^3.2.4",
    "oxlint": "^1.6.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "cli",
    "framework",
    "command-line",
    "typescript",
    "internal"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/esteban-url/trailhead.git",
    "directory": "packages/cli"
  },
  "license": "MIT"
}
