{
  "name": "@trailhead/testing",
  "version": "1.0.0",
  "description": "Functional testing utilities for CLI applications",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "default": "./dist/core/index.js"
    },
    "./mocks": {
      "types": "./dist/mocks/index.d.ts",
      "default": "./dist/mocks/index.js"
    },
    "./fixtures": {
      "types": "./dist/fixtures/index.d.ts",
      "default": "./dist/fixtures/index.js"
    },
    "./runners": {
      "types": "./dist/runners/index.d.ts",
      "default": "./dist/runners/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "pnpm clean && tsup && tsc --emitDeclarationOnly",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "types": "tsc --noEmit"
  },
  "dependencies": {
    "@trailhead/core": "workspace:*",
    "@trailhead/fs": "workspace:*"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "tsup": "^8.5.0",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "testing",
    "test-utilities",
    "mocks",
    "fixtures",
    "functional-programming",
    "cli",
    "typescript"
  ],
  "author": "Esteban Borai",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/esteban-url/trailhead-cli.git",
    "directory": "packages/testing"
  }
}