{
  "name": "@trailhead/web-ui",
  "version": "1.0.1",
  "description": "Enhanced Catalyst UI components with advanced theming system, semantic tokens, and professional CLI",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "type": "module",
  "bin": {
    "trailhead-ui": "./dist/src/cli.js",
    "trailhead-web-ui": "./dist/src/cli.js",
    "thui": "./dist/src/cli.js"
  },
  "keywords": [
    "ui",
    "components",
    "react",
    "typescript",
    "catalyst",
    "design-system",
    "thin-wrapper",
    "headlessui",
    "tailwindcss"
  ],
  "author": "Esteban Rojas",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/esteban-url/trailhead.git",
    "directory": "packages/web-ui"
  },
  "bugs": {
    "url": "https://github.com/esteban-url/trailhead/issues"
  },
  "homepage": "https://github.com/esteban-url/trailhead/tree/main/packages/web-ui#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "vite dev",
    "preview": "vite preview",
    "clean": "rm -rf dist node_modules/.vite",
    "check": "pnpm run types && pnpm run lint",
    "type-check": "tsc --noEmit",
    "types": "tsc --noEmit",
    "format": "prettier --write . --ignore-path .prettierignore",
    "format:check": "prettier --check . --ignore-path .prettierignore",
    "lint": "oxlint",
    "lint:fix": "pnpm run lint --fix",
    "fix:all": "pnpm run format && npm run lint:fix",
    "test": "vitest run",
    "test:coverage": "c8 --reporter=text --reporter=html  vitest",
    "test:cov": "c8 --reporter=text-summary vitest",
    "test:debug": "VITEST_CONSOLE_DEBUG=true vitest",
    "test:watch": "vitest --watch",
    "test:changed": "vitest run --changed HEAD --passWithNoTests",
    "test:e2e": "PLAYWRIGHT_HTML_OUTPUT_DIR=temp/playwright-report playwright test",
    "test:e2e:ui": "PLAYWRIGHT_HTML_OUTPUT_DIR=temp/playwright-report playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:codegen": "playwright codegen http://localhost:3000",
    "test:working": "vitest --exclude '**/future/**'",
    "test:future": "vitest tests/scripts/install/future --config vitest.future.config.ts",
    "test:install": "vitest tests/scripts/install --exclude '**/future/**'",
    "run-transforms": "tsx src/cli.ts transforms",
    "profile": "tsx src/cli.ts profile",
    "prepare": "husky",
    "doctor": "tsx scripts/doctor.ts",
    "deps:check": "pnpm outdated",
    "deps:update": "pnpm update --interactive",
    "size": "pnpm pack --dry-run | tail -1",
    "clean:all": "rm -rf dist node_modules coverage .vite temp test-temp"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "@inquirer/prompts": "^7.5.3",
    "@npmcli/package-json": "^6.2.0",
    "@trailhead/cli": "workspace:*",
    "chalk": "^5.3.0",
    "clsx": "^2.1.1",
    "commander": "^14.0.0",
    "culori": "^4.0.1",
    "framer-motion": "^12.16.0",
    "lucide-react": "^0.510.0",
    "next-themes": "^0.4.6",
    "nypm": "^0.6.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "semver": "^7.7.2",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.6",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.1",
    "@repo/oxlint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "@tailwindcss/vite": "^4.1.6",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/culori": "^4.0.0",
    "@types/diff": "^8.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jscodeshift": "^17.3.0",
    "@types/node": "^22.14.0",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@types/semver": "^7.7.0",
    "@vitejs/plugin-react": "^4.5.0",
    "@vitest/coverage-v8": "^3.1.4",
    "c8": "^10.1.3",
    "cosmiconfig": "^9.0.0",
    "diff": "^8.0.2",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.2",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "jscodeshift": "^17.3.0",
    "jsdom": "^26.1.0",
    "jsdom-testing-mocks": "^1.13.1",
    "lint-staged": "^16.0.0",
    "ora": "^8.2.0",
    "oxlint": "^1.1.0",
    "playwright": "^1.53.1",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.2",
    "typescript": "^5.8.3",
    "vite": "npm:rolldown-vite@latest",
    "vitest": "^3.1.4"
  },
  "peerDependencies": {
    "next-themes": ">=0.2.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "overrides": [
      {
        "files": "*.jsonc",
        "options": {
          "trailingComma": "none"
        }
      }
    ]
  },
  "c8": {
    "all": true,
    "reporter": [
      "text"
    ],
    "include": [
      "{src,scripts}/**/*.{ts,tsx}"
    ],
    "exclude": [
      "**/index.ts",
      "**/types.ts",
      "**/*.config.ts",
      "**/*.setup.ts",
      "**/*.d.ts"
    ]
  },
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "oxlint '{src,scripts,tests}/**/*.{ts,tsx}' --fix",
      "prettier --write --ignore-path .prettierignore"
    ],
    "*.{json,md,html,css}": "prettier --write --ignore-path .prettierignore",
    "**/*.test.{ts,tsx}": "vitest related --run"
  }
}
