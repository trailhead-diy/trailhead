{
  "name": "@esteban-url/trailhead-web-ui",
  "version": "1.0.1",
  "private": false,
  "description": "Enhanced Catalyst UI components with advanced theming system, semantic tokens, and professional CLI",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "@esteban-url:registry": "https://npm.pkg.github.com"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "trailhead-ui": "./dist/cli.js",
    "trailhead-web-ui": "./dist/cli.js",
    "thui": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "keywords": [
    "ui",
    "components",
    "react",
    "typescript",
    "catalyst",
    "design-system",
    "thin-wrapper",
    "headlessui",
    "tailwindcss"
  ],
  "author": "Esteban Rojas",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/esteban-url/trailhead.git",
    "directory": "packages/web-ui"
  },
  "bugs": {
    "url": "https://github.com/esteban-url/trailhead/issues"
  },
  "homepage": "https://github.com/esteban-url/trailhead/tree/main/packages/web-ui#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "build:prod": "NODE_ENV=production tsup",
    "dev": "vite dev",
    "preview": "vite preview",
    "clean": "rm -rf dist node_modules/.vite",
    "check": "pnpm run types && pnpm run lint",
    "types": "tsc --noEmit",
    "format": "prettier --write . --ignore-path .prettierignore",
    "format:check": "prettier --check . --ignore-path .prettierignore",
    "lint": "oxlint",
    "lint:fix": "pnpm run lint --fix",
    "fix:all": "pnpm run format && npm run lint:fix",
    "test": "vitest run --coverage",
    "test:coverage": "c8 --reporter=text --reporter=html  vitest",
    "test:cov": "c8 --reporter=text-summary vitest",
    "test:debug": "VITEST_CONSOLE_DEBUG=true vitest",
    "test:watch": "vitest --watch",
    "test:changed": "vitest run --changed HEAD --passWithNoTests",
    "test:e2e": "PLAYWRIGHT_HTML_OUTPUT_DIR=temp/playwright-report playwright test",
    "test:e2e:ui": "PLAYWRIGHT_HTML_OUTPUT_DIR=temp/playwright-report playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:codegen": "playwright codegen http://localhost:3000",
    "test:working": "vitest --exclude '**/future/**'",
    "doctor": "tsx scripts/doctor.ts",
    "deps:check": "pnpm outdated",
    "deps:update": "pnpm update --interactive",
    "size": "pnpm pack --dry-run | tail -1",
    "clean:all": "rm -rf dist node_modules coverage .vite temp test-temp",
    "validate": "pnpm types && pnpm lint && pnpm test"
  },
  "dependencies": {
    "@esteban-url/trailhead-cli": "workspace:*",
    "@headlessui/react": "^2.2.4",
    "chalk": "^5.4.1",
    "clsx": "^2.1.1",
    "culori": "^4.0.2",
    "framer-motion": "^12.23.0",
    "lucide-react": "^0.525.0",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "semver": "^7.7.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "@repo/oxlint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "@tailwindcss/vite": "^4.1.11",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/culori": "^4.0.0",
    "@types/node": "^24.0.10",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@types/semver": "^7.7.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "c8": "^10.1.3",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "jsdom-testing-mocks": "^1.13.1",
    "oxlint": "^1.6.0",
    "playwright": "^1.53.2",
    "prettier": "^3.6.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "npm:rolldown-vite@^7.0.6",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "next-themes": ">=0.2.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "prettier": "@repo/prettier-config",
  "c8": {
    "all": true,
    "reporter": [
      "text"
    ],
    "include": [
      "{src,scripts}/**/*.{ts,tsx}"
    ],
    "exclude": [
      "**/index.ts",
      "**/types.ts",
      "**/*.config.ts",
      "**/*.setup.ts",
      "**/*.d.ts",
      "**/__tests__/**",
      "**/*.test.{ts,tsx}",
      "**/*.spec.{ts,tsx}"
    ]
  },
  "packageManager": "pnpm@10.12.4",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
