{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Trailhead UI Configuration",
  "description": "Configuration schema for Trailhead UI CLI",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "install": {
      "type": "object",
      "description": "Installation command configuration",
      "properties": {
        "destDir": {
          "type": "string",
          "description": "Destination directory for component installation",
          "default": "src/components/ui"
        },
        "wrappers": {
          "type": "boolean",
          "description": "Whether to install wrapper files",
          "default": true
        },
        "framework": {
          "type": "string",
          "enum": ["nextjs", "vite", "redwood-sdk", "generic-react"],
          "description": "Target framework"
        }
      },
      "additionalProperties": false
    },
    "transforms": {
      "type": "object",
      "description": "Transform command configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Whether transforms are enabled globally",
          "default": true
        },
        "srcDir": {
          "type": "string",
          "description": "Source directory containing components to transform",
          "default": "src/components/lib"
        },
        "enabledTransforms": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of transforms to enable (overrides defaults)"
        },
        "disabledTransforms": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of transforms to disable"
        }
      },
      "additionalProperties": false
    },
    "devRefresh": {
      "type": "object",
      "description": "Dev refresh command configuration",
      "properties": {
        "srcDir": {
          "type": "string",
          "description": "Source directory containing Catalyst components",
          "default": "catalyst-ui-kit/typescript"
        },
        "destDir": {
          "type": "string",
          "description": "Destination directory for refreshed components",
          "default": "src/components/lib"
        },
        "clean": {
          "type": "boolean",
          "description": "Whether to clean destination before copying",
          "default": true
        }
      },
      "additionalProperties": false
    },
    "verbose": {
      "type": "boolean",
      "description": "Enable verbose output for all commands",
      "default": false
    },
    "dryRun": {
      "type": "boolean",
      "description": "Run commands in dry-run mode by default",
      "default": false
    }
  },
  "additionalProperties": false
}
