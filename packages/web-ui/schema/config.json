{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Trailhead UI Configuration",
  "description": "Configuration schema for Trailhead UI CLI",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "devRefresh": {
      "type": "object",
      "description": "Dev refresh command configuration",
      "properties": {
        "srcDir": {
          "type": "string",
          "description": "Source directory containing Catalyst components",
          "default": "catalyst-ui-kit/typescript"
        },
        "destDir": {
          "type": "string",
          "description": "Destination directory for refreshed components",
          "default": "src/components/lib"
        },
        "clean": {
          "type": "boolean",
          "description": "Whether to clean destination before copying",
          "default": true
        }
      },
      "additionalProperties": false
    },
    "verbose": {
      "type": "boolean",
      "description": "Enable verbose output for all commands",
      "default": false
    },
    "dryRun": {
      "type": "boolean",
      "description": "Run commands in dry-run mode by default",
      "default": false
    }
  },
  "additionalProperties": false
}
