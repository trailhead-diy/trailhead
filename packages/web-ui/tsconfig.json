{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "types": ["vitest/jsdom", "node", "@testing-library/jest-dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"],
      "@scripts/*": ["./scripts/*"]
    },
    "noEmit": false,
    "outDir": "dist"
  },
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true,
    "fileExtensions": {
      "inputGlob": "{js,jsx,mjs}",
      "outputCheck": ["js", "json", "jsx", "mjs"]
    }
  },
  "include": ["src/**/*", "vitest.config.ts", "vitest.setup.ts"],
  "exclude": ["node_modules", "dist", "tests/**/*"]
}
