{
  "$schema": "https://oxc-project.github.io/oxlint/schema.json",
  "extends": ["../../.oxlintrc.json"],
  "plugins": ["react", "typescript", "vitest", "import", "jsx-a11y"],
  "include": ["src/**/*.{ts,tsx}", "scripts/**/*.{ts,tsx}", "tests/**/*.{ts,tsx}"],
  "ignorePatterns": ["node_modules", "dist", "catalyst-ui-kit", "coverage", "demo", "demos"],
  "rules": {
    "no-autofocus": "off",
    "no-useless-fallback-in-spread": "off",
    "eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_"
      }
    ],
    "react/jsx-no-target-blank": "off",
    "react/self-closing-comp": "off",
    "jsx-a11y/aria-role": "off",
    "jsx-a11y/html-has-lang": "off",
    "jsx-a11y/role-has-required-aria-props": "off",
    "jsx-a11y/anchor-is-valid": "off",
    "jsx-a11y/prefer-tag-over-role": "off",
    "jsx-a11y/click-events-have-key-events": "off",
    "jsx-a11y/no-static-element-interactions": "off",
    "jsx-a11y/anchor-has-content": "off",
    "jsx-a11y/label-has-associated-control": "off",
    "jsx-a11y/heading-has-content": "off",
    "unicorn/consistent-function-scoping": "off",
    "react/react-in-jsx-scope": "off"
  },
  "settings": {
    "jsx-a11y": {
      "components": {
        "Link": "a",
        "Button": "button"
      }
    }
  },
  "overrides": [
    {
      "files": ["src/cli/**/*.ts", "src/cli.ts", "src/**/transforms*/*.ts"],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["scripts/**/*.ts"],
      "rules": {
        "no-console": "off",
        "unicorn/consistent-function-scoping": "off"
      }
    },
    { "files": ["src/cli/core/installation/**/*.ts"], "rules": { "no-console": "off" } },
    {
      "files": ["src/cli/core/installation/**/*.ts"],
      "rules": {
        "no-console": "off",
        "unicorn/consistent-function-scoping": "off"
      }
    },
    {
      "files": ["src/cli/core/installation/**/*.ts"],
      "rules": {
        "no-console": "off",
        "unicorn/consistent-function-scoping": "off"
      }
    },
    {
      "files": ["src/cli/core/installation/**/*.ts"],
      "rules": {
        "no-console": "off",
        "unicorn/consistent-function-scoping": "off"
      }
    },
    {
      "files": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/vitest.setup.ts",
        "tests/**/*.ts",
        "tests/**/*.tsx"
      ],
      "rules": {
        "no-console": "off",
        "typescript/no-explicit-any": "off",
        "jsx-a11y/aria-role": "off",
        "unicorn/consistent-function-scoping": "off",
        "import/no-empty-named-blocks": "off",
        "no-unassigned-import": "off",
        "no-named-as-default": "off",
        "label-has-associated-control": "off"
      }
    }
  ]
}
