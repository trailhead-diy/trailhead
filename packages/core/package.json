{
  "name": "@trailhead/core",
  "version": "2.0.0",
  "type": "module",
  "private": false,
  "description": "Foundation package for Trailhead System - CoreError interface, Result types, and functional programming utilities",
  "author": "Esteban Rojas (Trailhead DIY)",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./errors": {
      "types": "./dist/errors/index.d.ts",
      "default": "./dist/errors/index.js"
    },
    "./functional": {
      "types": "./dist/functional/index.d.ts",
      "default": "./dist/functional/index.js"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "default": "./dist/testing/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    }
  },
  "scripts": {
    "build": "pnpm clean && tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "types": "tsc --noEmit",
    "format": "prettier --write . --log-level=error --ignore-path .prettierignore ",
    "clean": "rm -rf dist",
    "prepublishOnly": "echo \"Publishing without rebuild\""
  },
  "dependencies": {
    "neverthrow": "^8.2.0"
  },
  "devDependencies": {
    "@repo/tsup-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "@types/node": "^24.10.0",
    "@vitest/coverage-v8": "^4.0.16",
    "oxlint": "^1.35.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "core",
    "errors",
    "functional",
    "result-types",
    "typescript",
    "trailhead"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trailhead-diy/trailhead.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/trailhead-diy/trailhead/issues"
  },
  "homepage": "https://github.com/trailhead-diy/trailhead#readme",
  "license": "MIT"
}
