{
  "name": "@esteban-url/core",
  "version": "1.0.0",
  "type": "module",
  "private": false,
  "description": "Foundation package for Trailhead System - CoreError interface, Result types, and functional programming utilities",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "@esteban-url:registry": "https://npm.pkg.github.com"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./errors": {
      "types": "./dist/errors/index.d.ts",
      "default": "./dist/errors/index.js"
    },
    "./functional": {
      "types": "./dist/functional/index.d.ts",
      "default": "./dist/functional/index.js"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "default": "./dist/testing/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    }
  },
  "scripts": {
    "build": "pnpm clean && tsup && tsc --emitDeclarationOnly",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "types": "tsc --noEmit",
    "format": "prettier --write . --ignore-path .prettierignore",
    "clean": "rm -rf dist",
    "prepack": "pnpm build"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "fp-ts": "^2.16.10",
    "neverthrow": "^8.2.0"
  },
  "devDependencies": {
    "@repo/oxlint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "@types/node": "^24.0.10",
    "@vitest/coverage-v8": "^3.2.4",
    "oxlint": "^1.6.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "core",
    "errors",
    "functional",
    "result-types",
    "typescript",
    "trailhead"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/esteban-url/trailhead.git",
    "directory": "packages/core"
  },
  "license": "MIT"
}
