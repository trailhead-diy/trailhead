{
  "name": "@trailhead/config",
  "version": "1.0.0",
  "description": "Functional configuration management for CLI applications",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "default": "./dist/core/index.js"
    },
    "./loaders": {
      "types": "./dist/loaders/index.d.ts",
      "default": "./dist/loaders/index.js"
    },
    "./validators": {
      "types": "./dist/validators/index.d.ts",
      "default": "./dist/validators/index.js"
    },
    "./transformers": {
      "types": "./dist/transformers/index.d.ts",
      "default": "./dist/transformers/index.js"
    },
    "./validation": {
      "types": "./dist/validation/index.d.ts",
      "default": "./dist/validation/index.js"
    },
    "./docs": {
      "types": "./dist/docs/index.d.ts",
      "default": "./dist/docs/index.js"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "default": "./dist/cli/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "pnpm clean && tsup && tsc --emitDeclarationOnly",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "types": "tsc --noEmit"
  },
  "dependencies": {
    "@trailhead/core": "workspace:*",
    "@trailhead/validation": "workspace:*",
    "@trailhead/fs": "workspace:*"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "tsup": "^8.5.0",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "configuration",
    "config",
    "functional-programming",
    "cli",
    "typescript"
  ],
  "author": "Esteban Borai",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/esteban-url/trailhead-cli.git",
    "directory": "packages/config"
  }
}
