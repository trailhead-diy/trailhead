{
  "name": "@trailhead/config",
  "version": "2.0.0",
  "description": "Enhanced Zod-powered configuration management for CLI applications",
  "type": "module",
  "private": false,
  "author": "Esteban Rojas (Trailhead DIY)",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "default": "./dist/core/index.js"
    },
    "./loaders": {
      "types": "./dist/loaders/index.d.ts",
      "default": "./dist/loaders/index.js"
    },
    "./validators": {
      "types": "./dist/validators/index.d.ts",
      "default": "./dist/validators/index.js"
    },
    "./transformers": {
      "types": "./dist/transformers/index.d.ts",
      "default": "./dist/transformers/index.js"
    },
    "./validation": {
      "types": "./dist/validation/index.d.ts",
      "default": "./dist/validation/index.js"
    },
    "./docs": {
      "types": "./dist/docs/index.d.ts",
      "default": "./dist/docs/index.js"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "default": "./dist/testing/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "pnpm clean && tsup",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "types": "tsc --noEmit",
    "format": "prettier --write . --log-level=error --ignore-path .prettierignore ",
    "prepublishOnly": "echo \"Publishing without rebuild\""
  },
  "dependencies": {
    "@trailhead/core": "workspace:*",
    "@trailhead/fs": "workspace:*",
    "@trailhead/validation": "workspace:*",
    "consola": "^3.4.2"
  },
  "devDependencies": {
    "@repo/tsup-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "@vitest/coverage-v8": "^3.2.4",
    "tsup": "^8.5.0",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "configuration",
    "config",
    "zod",
    "validation",
    "functional-programming",
    "cli",
    "typescript"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trailhead-diy/trailhead.git",
    "directory": "packages/config"
  },
  "bugs": {
    "url": "https://github.com/trailhead-diy/trailhead/issues"
  },
  "homepage": "https://github.com/trailhead-diy/trailhead#readme"
}
