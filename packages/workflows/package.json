{
  "name": "@trailhead/workflows",
  "version": "1.0.0",
  "description": "Functional workflow orchestration for CLI applications",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "default": "./dist/core/index.js"
    },
    "./steps": {
      "types": "./dist/steps/index.d.ts",
      "default": "./dist/steps/index.js"
    },
    "./execution": {
      "types": "./dist/execution/index.d.ts",
      "default": "./dist/execution/index.js"
    },
    "./state": {
      "types": "./dist/state/index.d.ts",
      "default": "./dist/state/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "pnpm clean && tsup && tsc --emitDeclarationOnly",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "types": "tsc --noEmit"
  },
  "dependencies": {
    "@trailhead/core": "workspace:*",
    "neverthrow": "^8.2.0"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "tsup": "^8.5.0",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "workflows",
    "orchestration",
    "functional-programming",
    "cli",
    "typescript"
  ],
  "author": "Esteban Borai",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/esteban-url/trailhead-cli.git",
    "directory": "packages/workflows"
  }
}
