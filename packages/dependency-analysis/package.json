{
  "name": "@esteban-url/dependency-analysis",
  "version": "0.0.0",
  "description": "Intelligent dependency analysis for atomic commit generation",
  "keywords": [
    "dependency-analysis",
    "git",
    "atomic-commits",
    "dependency-cruiser",
    "tree-sitter",
    "typescript"
  ],
  "author": "Esteban <esteban@url.sh>",
  "repository": {
    "type": "git",
    "url": "https://github.com/esteban-url/trailhead.git",
    "directory": "packages/dependency-analysis"
  },
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    },
    "./graph": {
      "types": "./dist/graph/index.d.ts",
      "import": "./dist/graph/index.js"
    },
    "./grouping": {
      "types": "./dist/grouping/index.d.ts",
      "import": "./dist/grouping/index.js"
    },
    "./analysis": {
      "types": "./dist/analysis/index.d.ts",
      "import": "./dist/analysis/index.js"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "import": "./dist/testing/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src"
  ],
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "format": "prettier --write '**/*.{ts,json,md}'",
    "lint": "oxlint .",
    "lint:fix": "oxlint . --fix",
    "test": "vitest run --reporter=verbose",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "types": "tsc --noEmit"
  },
  "dependencies": {
    "@esteban-url/core": "workspace:*",
    "@esteban-url/fs": "workspace:*",
    "@esteban-url/git": "workspace:*",
    "dependency-cruiser": "^16.6.0",
    "tree-sitter": "^0.25.0",
    "tree-sitter-typescript": "^0.23.2"
  },
  "devDependencies": {
    "@repo/oxlint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "@types/node": "^22.10.7",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "vitest": "^3.0.0"
  },
  "prettier": "@repo/prettier-config",
  "publishConfig": {
    "access": "public"
  }
}
