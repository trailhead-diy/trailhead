{
  "name": "trailhead",
  "version": "1.0.0",
  "private": true,
  "description": "Trailhead is a toolkit for building UI libraries and CLIs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trailhead-diy/trailhead.git"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "coverage:changed": "turbo test:coverage --affected",
    "lint": "oxlint . --config .oxlintrc.json",
    "lint:fix": "oxlint . --fix --config .oxlintrc.json",
    "types": "turbo types --filter=./packages/*",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --log-level=error --ignore-path .gitignore --ignore-pattern \"**/*.hbs\" ",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\" --log-level=error --ignore-path .gitignore --ignore-pattern \"**/*.hbs\"",
    "ci:quick": "turbo lint types test --affected --cache-dir=.turbo --concurrency=100%",
    "docs:api": "typedoc",
    "docs:api:watch": "typedoc --watch",
    "changeset": "changeset",
    "changeset:add": "changeset add",
    "changeset:status": "changeset status --verbose",
    "version-packages": "changeset version",
    "release": "turbo build --filter=./packages/* && changeset publish",
    "release:dry-run": "changeset publish --dry-run",
    "fresh-start": "bash scripts/fresh-start.sh",
    "create-cli": "node packages/create-cli/bin/cli.js",
    "dev:demos": "turbo dev --filter=./apps/demos/*",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@inquirer/prompts": "^7.8.0",
    "@types/node": "^24.1.0",
    "chalk": "^5.4.1",
    "lefthook": "^1.12.2",
    "oxlint": "^1.9.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "turbo": "^2.5.5",
    "typedoc": "^0.28.9",
    "typedoc-plugin-frontmatter": "^1.3.0",
    "typedoc-plugin-markdown": "^4.8.0",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.13.1+sha256.0f9ed48d808996ae007835fb5c4641cf9a300def2eddc9e957d9bbe4768c5f28",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "glob@<10": ">=11.0.0",
      "inflight": "npm:@void/noop@^1.0.0"
    },
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "core-js",
      "core-js-pure",
      "esbuild",
      "lefthook"
    ]
  }
}
