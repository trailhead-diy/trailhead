{
  "name": "trailhead",
  "version": "1.0.0",
  "private": true,
  "description": "Trailhead is a toolkit for building UI libraries and CLIs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/esteban-url/trailhead.git"
  },
  "scripts": {
    "build": "turbo build --filter=!@esteban-url/trailhead-web-ui",
    "dev": "turbo dev --filter=!@esteban-url/trailhead-web-ui",
    "test": "turbo test --filter=!@esteban-url/trailhead-web-ui",
    "lint": "turbo lint --filter=!@esteban-url/trailhead-web-ui",
    "lint:fix": "turbo lint:fix --filter=!@esteban-url/trailhead-web-ui",
    "types": "turbo types --filter=!@esteban-url/trailhead-web-ui",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore --list-different",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "docs:validate": "tsx tooling/docs-tooling/src/validate-docs.ts",
    "docs:lint": "vale docs && markdownlint docs/**/*.md",
    "docs:coverage": "tsx tooling/docs-tooling/src/validate-docs.ts --coverage",
    "docs:new": "tsx tooling/docs-tooling/src/create-doc.ts",
    "changeset": "changeset",
    "changeset:add": "changeset add",
    "changeset:status": "changeset status --verbose",
    "version-packages": "changeset version",
    "release": "turbo build --filter=./packages/* && changeset publish",
    "release:dry-run": "changeset publish --dry-run",
    "fresh-start": "node scripts/fresh-start.js",
    "dev:cli": "turbo dev --filter=@esteban-url/trailhead-cli",
    "dev:ui": "turbo dev --filter=@esteban-url/trailhead-web-ui",
    "dev:demos": "turbo dev --filter=./apps/demos/*",
    "build:cli": "turbo build --filter=@esteban-url/trailhead-cli",
    "build:ui": "turbo build --filter=@esteban-url/trailhead-web-ui",
    "build:packages": "turbo build --filter=./packages/* --filter=!@esteban-url/trailhead-web-ui",
    "test:cli": "turbo test --filter=@esteban-url/trailhead-cli",
    "test:ui": "turbo test --filter=@esteban-url/trailhead-web-ui",
    "validate:deps": "tsx scripts/validate-dependencies.js",
    "prepare": "lefthook install",
    "lefthook": "lefthook",
    "lefthook:install": "lefthook install",
    "lefthook:uninstall": "lefthook uninstall"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@inquirer/prompts": "^7.6.0",
    "@types/node": "^24.0.10",
    "chalk": "^5.4.1",
    "gray-matter": "^4.0.3",
    "lefthook": "^1.11.16",
    "oxlint": "^1.6.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "tsx": "^4.20.3",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.12.4",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "glob@<10": ">=11.0.0",
      "inflight": "npm:@void/noop@^1.0.0"
    },
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "esbuild",
      "lefthook"
    ]
  }
}
