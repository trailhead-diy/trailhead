{
  "name": "trailhead",
  "version": "1.0.0",
  "private": true,
  "description": "Trailhead is a toolkit for building UI libraries and CLIs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/esteban-url/trailhead.git"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "lint": "turbo lint",
    "types": "turbo types",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "docs:validate": "tsx tooling/docs-tooling/src/validate-docs.ts",
    "docs:lint": "vale docs && markdownlint docs/**/*.md",
    "docs:coverage": "tsx tooling/docs-tooling/src/validate-docs.ts --coverage",
    "docs:new": "tsx tooling/docs-tooling/src/create-doc.ts",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "turbo build --filter=./packages/* && changeset publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@inquirer/prompts": "^7.1.0",
    "@types/node": "^24.0.10",
    "chalk": "^5.3.0",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.2.5",
    "tsx": "^4.20.3",
    "turbo": "^1.12.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "glob@<10": ">=11.0.0",
      "inflight": "npm:@void/noop@^1.0.0"
    }
  }
}
